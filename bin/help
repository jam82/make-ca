# shllcheck source=/dev/null
source bin/log

cprintf "yellow" "Usage" 
cprintf "white"  ": make [target] [KEY_ALG=algorithm]\n"
echo "       make client   [CN=name]"
echo "       make server   [CN=name] [SAN=DNS:othername[,..]]"
echo "       make smime    [CN=name] [EMAIL=address] [SAN=email:mail[,..]]"
echo "       make revoke   [CA=slug] [CN=name] [REASON=reason]"
echo ""
cprintf "grey" "Default values are defined in "
cprintf "bold" "settings.mk\n"
